# Application
NODE_ENV=development
APP_NAME=ivy-4g-gateway
LOG_LEVEL=debug

# TCP Server
TCP_HOST=0.0.0.0
TCP_PORT=8899
TCP_HEARTBEAT_INTERVAL=30000
TCP_CONNECTION_TIMEOUT=120000

# MQTT Broker
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=ivy-gateway-01
MQTT_TOPIC_PREFIX=metpow/4g

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ivy_gateway
DB_USER=postgres
DB_PASSWORD=

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
AES_ENCRYPTION_KEY=
METER_OPERATOR_CODE=00000000
METER_PASSWORD=00000000

# Polling
POLLING_INTERVAL_MS=60000
POLLING_BATCH_SIZE=10
